<AddingTask>:
    name: "AddTask"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds1.jpg'
    BoxLayout:
        id: TaskCard
        size_hint: 0.8, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: Add_Task
            text: "ADD NEW TASK"
            font_size: 72
            font_name: 'fonts/Bock_Personaluse.otf'
            halign: 'center'
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: task_name
            font_name: 'fonts/unispace.ttf'
            hint_text: "Name your task"
            icon_right: "human"
            size_hint: 0.8, 0.6
            background_color: gch("#7e10cc")
            opacity: 0.8
            font_size: 25
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: describe
            multiline: True
            font_name: 'fonts/unispace.ttf'
            hint_text: "describe your task"
            icon_right: "account"
            size_hint: 0.8, 0.8
            background_color: gch("#7e10cc")
            opacity: 0.8
            font_size: 15
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: date
            font_name: 'fonts/unispace.ttf'
            hint_text: "Write the deadline"
            icon_right: "email"
            size_hint: 0.8, 0.6
            background_color: gch("#7e10cc")
            opacity: 0.8
            font_size: 25
            pos_hint: {"center_x": 0.5}
        BoxLayout:
            id: ImportanceCard
            size_hint: 0.4, 0.4
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 5
            padding: 15
            spacing: 15
            orientation: 'horizontal'
            MDLabel:
                id: ImportanceHint
                text: "VIP Task?"
                font_size: 30
                font_name: 'fonts/unispace.ttf'
                halign: 'center'
                height: self.texture_size[1]
                padding_y: 15
            CheckBox:
                id: importance_check_box
                size_hint: 0.5, 0.5
        MDRoundFlatButton:
            font_name: 'fonts/Bock_Personaluse.otf'
            text: "Accept"
            font_size: 36
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5}
            on_press: root.make_task()
        MDFillRoundFlatButton:
            font_name: 'fonts/Bock_Personaluse.otf'
            text: "Back"
            font_size: 36
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "ListOptionsWindow"
        Widget:
            size_hint_y: None
            height: 10

<TaskShow>:
    name: "show_tasks"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds1.jpg'
    BoxLayout:
        id: Main2Layout
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: 'vertical'
        MDCard:
            size_hint: 1, 0.2
            pos_hint: {"center_x": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'horizontal'
            color: hex('#674ea7')
            MDLabel:
                id: NormalTaskTitle
                text: "NORMAL TASKS"
                size_hint: 1, None
                height: self.texture_size[1]
                font_size: 100
                font_name: 'fonts/Bock_Personaluse.otf'
                halign: 'center'
                padding_y: 15
            MDLabel:
                id: VIPTaskTitle
                text: "VIP TASKS"
                size_hint: 1, None
                height: self.texture_size[1]
                font_size: 100
                font_name: 'fonts/Bock_Personaluse.otf'
                halign: 'center'
                padding_y: 15
        BoxLayout:
            id: MainLayout
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'horizontal'
            ScrollView:
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                elevation: 10
                padding: 25
                spacing: 25
                orientation: 'vertical'
                GridLayout:
                    cols: 1
                    id: NormalTasksCard
                    size_hint: 1, None
                    height: NormalTaskTitle.height*100
                    elevation: 1
                    padding: 25
                    spacing: 25

            ScrollView:
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                elevation: 10
                padding: 25
                spacing: 25
                orientation: 'vertical'
                GridLayout:
                    cols: 1
                    id: VIPTasksCard
                    size_hint: 1, None
                    height: VIPTaskTitle.height*100
                    elevation: 1
                    padding: 25
                    spacing: 25
    MDFillRoundFlatButton:
        font_name: 'fonts/Bock_Personaluse.otf'
        text: "Back"
        font_size: 36
        size_hint: 0.3, 0.1
        pos_hint: {"center_x": 0.5}
        on_release: app.root.current = "ListOptionsWindow"

