#: import gch kivy.utils.get_color_from_hex
WindowManager:
    MainWindow:
    LoginWindow:
    SignInWindow:
    OptionsWindow:
    AboutWindow:
    ListOptionsWindow:
    AddingTask:
    TaskShow:
    DeleteTask:
    CalendarWindow:
    FinishTask:
<MainWindow>:
    name: "main"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds1.jpg'
    BoxLayout:
        id: maincard
        size_hint: 0.8, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 25
        padding: 25
        spacing: 40
        orientation: 'vertical'
        background_color: hex('#674ea7')
        MDLabel:
            id: logo
            text: "T O      D O     L I S T"
            font_size: 80
            font_name: 'fonts/Bock_Personaluse.otf'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDRoundFlatButton:
            id: loginbutton
            text: "Login"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_release: root.on_login_click()
        MDRoundFlatButton:
            id: signinbutton
            text: "Sign in"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_release: root.on_signin_click()
        MDRoundFlatButton:
            text: "Options"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_press: root.on_options_click()
        MDRoundFlatButton:
            text: "About"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "about"
        MDRoundFlatButton:
            text: "Quit"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_press: root.on_quit_click()


<LoginWindow>:
    name: "login"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds2.jpg'
    BoxLayout:
        id: card
        size_hint: 0.8, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: welcome
            text: "LOGIN"
            font_size: 90
            color: hex('#674ea7')
            font_name: 'fonts/Bock_Personaluse.otf'
            halign: 'center'
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: user
            font_name: 'fonts/unispace.ttf'
            hint_text: "username"
            icon_right: "account"
            size_hint: 0.6, 0.3
            font_size: 25
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: passw
            font_name: 'fonts/unispace.ttf'
            hint_text: "password"
            icon_right: "eye-off"
            size_hint: 0.6, 0.3
            width: 200
            font_size: 25
            pos_hint: {"center_x": 0.5}
            password: True
        MDRoundFlatButton:
            font_name: 'fonts/Bock_Personaluse.otf'
            text: "Accept"
            font_size: 50
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5}
            on_press: self.parent.parent.login()
        MDRoundFlatButton:
            font_name: 'fonts/Bock_Personaluse.otf'
            text: "Clear"
            font_size: 50
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5}
            on_press: self.parent.parent.clear()
        MDFillRoundFlatButton:
            font_name: 'fonts/Bock_Personaluse.otf'
            text: "Back"
            font_size: 36
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "main"
        Widget:
            size_hint_y: None
            height: 10

