        elevation: 25
        padding: 25
        spacing: 40
        orientation: 'vertical'
        MDRoundFlatButton:
            text: "Upcoming Tasks"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
            on_release: root.show_task()
        MDRoundFlatButton:
            text: "Finished Tasks"
            font_size: 36
            font_name: 'fonts/Bock_Personaluse.otf'
            size_hint: 1, 2
            pos_hint: {"center_x": 0.5}
