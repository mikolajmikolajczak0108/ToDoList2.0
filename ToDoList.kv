<OptionsWindow>:
    name: "options_window"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds1.jpg'
    BoxLayout:
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
        BoxLayout:
            id: OptLayout
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'horizontal'
            MDCard:
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                elevation: 10
                padding: 25
                spacing: 25
                orientation: 'vertical'
                MDLabel:
                    text: "Graphics"
                    size_hint: 1, 0.5
                    height: self.texture_size[1]
                    font_size: 100
                    font_name: 'fonts/Bock_Personaluse.otf'
                    halign: 'center'
                    padding_y: 15
                BoxLayout:
                    id: graphics_set_chooser
                    size_hint: 1, 0.3
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    orientation: "horizontal"
                    MDLabel:
                        text: "Change graphic's set"
                        size_hint: 1, None
                        height: self.texture_size[1]
                        font_size: 30
                        font_name: 'fonts/unispace.ttf'
                        halign: 'center'
                        padding_y: 15
            MDCard:
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                elevation: 10
                padding: 25
                spacing: 25
                orientation: 'vertical'
                MDLabel:
                    text: "Sound"
                    size_hint: 1, 1
                    height: self.texture_size[1]
                    font_size: 100
                    font_name: 'fonts/Bock_Personaluse.otf'
                    halign: 'center'
                    padding_y: 15
                BoxLayout:
                    id: layout_slide
                    size_hint: 1, 0.3
                    orientation: "vertical"
                    MDLabel:
                        text: "Volume of the music"
                        size_hint: 1, None
                        height: self.texture_size[1]
                        font_size: 20
                        font_name: 'fonts/unispace.ttf'
                        halign: 'center'
                        padding_y: 15
                    Slider:
                        id: volume_slider
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'
                        value_track: True
                        value_track_color: .6, .4 , .8, 1
                        on_touch_move: root.change_volume()
                BoxLayout:
                    size_hint: 1, 0.3
                    orientation: "vertical"
                    BoxLayout:
                        size_hint: 1, 0.3
                        orientation: "horizontal"
                        MDLabel:
                            text: "Mute"
                            size_hint: 1, None
                            height: self.texture_size[1]
                            font_size: 20
                            font_name: 'fonts/unispace.ttf'
                            halign: 'center'
                            padding_y: 15
