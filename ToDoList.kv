<AboutWindow>:
    name: "about"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/Clouds2.jpg'
    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'img/about.png'
        id: AboutLayout
        size_hint: 1, 1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: 'vertical'
        BoxLayout:
            id: card
            size_hint: 0.8, 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
            MDLabel:
                id: about_label
                multiline: True
                text: "In a hole in the ground there lived a hobbit. Not a nasty, dirty, wet hole, filled with the ends of worms and an oozy smell, nor yet a dry, bare, sandy hole with nothing in it to sit down on or to eat: it was a hobbit-hole, and that means comfort."
                font_size: 55
                color: hex('#121854')
                size_hint: 0.6, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                font_name: 'fonts/Rothenburg Decorative.ttf'
                halign: 'center'
                height: self.texture_size[1]
                padding_y: 15
        MDRoundFlatButton:
            text: "Back"
            font_size: 36
            font_name: 'fonts/Rothenburg Decorative.ttf'
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = 'main'
<ListOptionsWindow>:
    name: "ListOptionsWindow"
    canvas.before:
        Rectangle:
            pos: self.pos
